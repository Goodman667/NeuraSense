    },
    {
      "rule_id": "R007_trend_worsening",
      "enabled": true,
      "name_zh": "趋势恶化 → 升级建议",
      "tier": "ACUTE",
      "priority": 850,
      "condition": {
        "AND": [
          {"field": "trend.direction", "op": "==", "value": "worsening"},
          {"field": "trend.mood_avg_7d", "op": "<", "value": 5}
        ]
