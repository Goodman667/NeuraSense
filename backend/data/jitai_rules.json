{
  "version": "2.0.0",
  "description": "JITAI v2 决策规则配置 — 决策点/候选干预/个性化变量/规则/近端结果",
  "rules": [
    {
      "rule_id": "R001_crisis_high_stress_low_mood",
      "enabled": true,
      "name_zh": "高压力+低情绪 → DBT 急救",
      "tier": "ACUTE",
      "priority": 900,
      "condition": {
        "AND": [
          {"field": "checkin.stress", "op": ">", "value": 7},
          {"field": "checkin.mood", "op": "<", "value": 4}
        ]
      },
      "actions": [
        {
          "type": "recommend_tool",
          "tool_id": "dbt_stop",
          "reason_zh": "你现在压力较大且情绪低落，STOP 四步急刹车可以快速帮你稳住"
        },
        {
          "type": "recommend_tool",
          "tool_id": "dbt_tipp",
          "reason_zh": "TIPP 冷水急救能迅速降低情绪温度，帮身体回到安全状态"
        }
      ],
      "task": {
        "text": "写一条「此刻我的感受」心情日记，哪怕只有一句话",
        "reason_zh": "把感受写下来本身就是一种情绪释放"
      }
    },
    {
      "rule_id": "R002_high_stress",
      "enabled": true,
      "name_zh": "高压力 → 呼吸放松",
      "tier": "ACUTE",
      "priority": 800,
      "condition": {
        "field": "checkin.stress", "op": ">", "value": 7
      },
      "actions": [
        {
          "type": "recommend_tool",
          "tool_id": "breathing_478",
          "reason_zh": "你的压力偏高，4-7-8 呼吸法能在 5 分钟内激活副交感神经"
        },
        {
          "type": "recommend_tool",
          "tool_id": "sleep_pmr",
          "reason_zh": "渐进式肌肉放松可以释放身体里积累的紧张感"
        }
      ],
      "task": {
        "text": "做一次 4-7-8 呼吸练习（至少 3 个循环）",
        "reason_zh": "规律的呼吸练习能训练身体更快回到平静"
      }
    },
    {
      "rule_id": "R003_low_mood",
      "enabled": true,
      "name_zh": "低情绪 → 认知重构",
      "tier": "ACUTE",
      "priority": 750,
      "condition": {
        "field": "checkin.mood", "op": "<", "value": 4
      },
      "actions": [
        {
          "type": "recommend_tool",
          "tool_id": "cbt_thought_record",
          "reason_zh": "心情低落时容易陷入消极思维，思维记录帮你找到更平衡的视角"
        },
        {
          "type": "recommend_tool",
          "tool_id": "cbt_three_good",
          "reason_zh": "写下三件好事——研究证实这个简单练习能持续改善情绪"
        }
      ],
      "task": {
        "text": "完成一次「三件好事」记录",
        "reason_zh": "训练大脑发现生活中的积极面"
      }
    },
    {
      "rule_id": "R004_poor_sleep",
      "enabled": true,
      "name_zh": "低睡眠质量 → 睡眠卫生",
      "tier": "ACUTE",
      "priority": 770,
      "condition": {
        "field": "checkin.sleep_quality", "op": "<", "value": 4
